@{
    ViewData["Title"] = "Sign In";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - AutoDeals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>

    <nav>
        <div class="logo-container">
            <img src="~/images/logo.png" alt="AutoDeals Logo" />
            
        </div>
    </nav>

    <section class="car-posting-form" style="max-width: 400px;">
        <h2 style="text-align:center;">Sign In</h2>

        @if (ViewBag.Error != null)
        {
            <p style="color:red; text-align:center;">@ViewBag.Error</p>
        }

        <form asp-controller="Auth" asp-action="Signin" method="post">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <input type="submit" value="Sign In">
        </form>

        <p style="text-align:center; margin-top:1rem;">
            Don't have an account? <a asp-controller="Home" asp-action="Signup">Sign Up</a>
        </p>
    </section>

</body>
</html>
